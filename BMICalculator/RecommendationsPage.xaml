<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BMICalculator.RecommendationsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Recommendations">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">

            <Label Text="Health Recommendations" FontSize="24" />

            <Frame Padding="14">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="HeaderLabel" FontSize="18" />
                    <Label x:Name="RecoLabel" FontSize="16" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Back To BMI Result"
                    Clicked="BackToResult_Clicked" />

            <Button Text="Back To Input"
                    Clicked="BackToInput_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
