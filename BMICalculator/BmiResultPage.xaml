<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BMICalculator.BmiResultPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BMI Result">

    <VerticalStackLayout Padding="20" Spacing="14">

        <Label Text="Your BMI Result" FontSize="24" />

        <Frame Padding="14">
            <VerticalStackLayout Spacing="10">
                <Label x:Name="BmiValueLabel" FontSize="20" />
                <Label x:Name="CategoryLabel" FontSize="20" />
                <Label x:Name="SummaryLabel" FontSize="16" />
            </VerticalStackLayout>
        </Frame>

        <Button Text="Go To Health Recommendations"
                Clicked="GoToRecommendations_Clicked" />

        <Button Text="Back To Input"
                Clicked="BackToInput_Clicked" />
    </VerticalStackLayout>
</ContentPage>
